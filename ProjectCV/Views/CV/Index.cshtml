@model DAL.VM.VMUser
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Seçkin Umur Software Developer">
    <meta name="keywords" content="seçkin, umur, asp.net, csharp, mvc, .net, winform, xamarin, izmir, yazılım, web, programlama, seckinumur, seckinumur.com, izmir, bilgeadam, choice, corporation">
    <meta name="author" content="seçkin umur, seckinumur.com">
    <title>Seçkin Umur</title>
    <link rel="shortcut icon" type="image/png" href="~/img/favicon.png" />

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/materialize.min.css" rel="stylesheet" />
    <link href="~/Content/css/animate.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.2.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/materialize.min.js" type="text/javascript"></script>
    <script src="~/Scripts/wow.min.js" type="text/javascript"></script>
    <script src="~/Scripts/masonry.pkgd.js" type="text/javascript"></script>
    <script src="~/Scripts/validator.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jspdf.js" type="text/javascript"></script>
    <script src="~/Scripts/html2canvas.min.js" type="text/javascript"></script>
    <script src="~/Scripts/qrcode.min.js" type="text/javascript"></script>
    <script src="~/Scripts/print.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootbox.min.js" type="text/javascript"></script>

</head>
<body>
    <div class="container">
        <div class="row">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <li><a href="~/View/Index">Geri Dön</a></li>
                        <li><a href="#" onclick="HTMLtoPDF()">PDF Olarak İndir</a></li>
                        <li><a href="#" onclick="Yazdir()">Yazdır</a></li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="row" id="pdfbolgesi">

            <aside class="col l4 m12 s12 sidebar z-depth-1" id="sidebar">
                <div class="row">
                    <div class="heading">
                        <div class="feature-img">
                            <a href="index-2.html"><img src="@Model.Resim" class="responsive-img"></a>
                        </div>

                        <div class="title col s12 m12 l9 right  wow">
                            <h2>@Model.AdSoyad</h2>
                            <span>@Model.Meslek</span>
                        </div>
                    </div>

                    <div class="col l12 m12 s12 sort-info sidebar-item">
                        <div class="row">
                            <div class="col m12 s12 l3 icon">
                                <i class="fa fa-user"></i>
                            </div>
                            <div class="col m12 s12 l9 info wow a1">
                                <div class="section-item-details">
                                    <p>@Model.Beceriler</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col l12 m12 s12  mobile sidebar-item">
                        <div class="row">
                            <div class="col m12 s12 l3 icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="col m12 s12 l9 info wow a2">
                                <div class="section-item-details">
                                    <div class="personal">
                                        <h4><a href="tel:@Model.Telefon">@Model.Telefon</a></h4>
                                        <span>Cep Telefonu</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col m12 s12 l3 icon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            <div class="col m12 s12 l9 info wow a2">
                                <div class="section-item-details">
                                    <div class="personal">
                                        <h4><a href="mailto:@Model.email">@Model.email</a></h4>
                                        <span>Mail</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col m12 s12 l3 icon">
                                <i class="fa fa-globe"></i>
                            </div>
                            <div class="col m12 s12 l9 info wow a2">
                                <div class="section-item-details">
                                    <div class="personal">
                                        <h4><a href="@Model.website" target="_blank">@Model.website</a></h4>
                                        <span>Web Site</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col m12 s12 l3 icon">
                                <i class="fa fa-github"></i>
                            </div>
                            <div class="col m12 s12 l9 info wow a2">
                                <div class="section-item-details">
                                    <div class="personal">
                                        <h4><a href="@Model.github" target="_blank">@Model.github</a></h4>
                                        <span>Github</span>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="col l12 m12 s12  mobile sidebar-item">
                        <div class="row">
                            <div class="col m12 s12 l3 icon">
                                <i class="fa fa-graduation-cap"></i>
                            </div>

                            <div class="col m12 l9 s12 skill-line a5 wow">
                                <div class="section-item-details">
                                    <h3>Eğitim</h3>
                                </div>
                                @{
                                    foreach (var item in Model.Egitimler)
                                    {
                                        <div class="section-item-details">
                                            <div class="personal">
                                                <h4>@item.OkulAdi / @item.Tarih</h4>
                                                <h5>@item.Tanimi / @item.YabanciDil</h5>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>

                            <div class="col m12 s12 l3 icon">
                                <i class="fa fa-qrcode"></i>
                            </div>
                            <div class="col m12 l9 s12 skill-line a5 wow">
                                <div class="section-item-details">
                                    <h3>QR KOD</h3>
                                </div>
                                <div class="section-item-details">
                                    <div class="personal">
                                        <div" id="QR">
                                    </div>
                                    <span>HTML5 Versiyonu İçin Okutun</span>
                                </div>
                            </div>

                            <div class="col m12 s12 l3 icon">
                                <i class="fa fa-html5"></i>
                            </div>
                            <div class="col m12 l9 s12 skill-line a5 wow">
                                <div class="section-item-details">
                                    <h3>Project CV</h3>
                                </div>
                                <div class="section-item-details">
                                    <div class="personal">
                                        <h4>©2017 Choice Corp. All Rights Reserved.</h4>
                                        <span>Bu CV <a href="https://www.seckinumur.com" target="_blank">seckinumur.com</a> Tarafından Oluşturulmuştur.</span>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </aside>

            <section class="col s12 m12 l8 section">
                <div class="row">

                    <div class="section-wrapper z-depth-1">
                        <div class="section-icon col s12 m12 l2">
                            <i class="fa fa-suitcase"></i>
                        </div>

                        <div class="custom-content col s12 m12 l10 wow fadeIn a1" data-wow-delay="0.1s">
                            <h2>İş Tecrübesi</h2>
                            @{
                                foreach (var item in Model.IsDeneyimleri)
                                {
                                    <div class="custom-content-wrapper wow fadeIn a2" data-wow-delay="0.2s">
                                        <h3>@item.Sirket</h3>
                                        <span>@item.Tarih</span>
                                        <p>@item.Aciklama</p>
                                    </div>
                                }
                            }
                        </div>
                    </div>

                    <div class="section-wrapper z-depth-1">
                        <div class="section-icon col s12 m12 l2">
                            <i class="fa fa-suitcase"></i>
                        </div>

                        <div class="custom-content col s12 m12 l10 wow fadeIn a1" data-wow-delay="0.1s">
                            <h2>Projeler</h2>
                            @{
                                foreach (var item in Model.ProjelerDeneyimleri)
                                {
                                    <div class="custom-content-wrapper wow a2">
                                        <h3>@item.ProjeAdi / @item.Tarih</h3>
                                        <span>Proje Github Linki: <a class="text-danger" href="@item.Link" target="_blank">@item.Link</a></span>
                                        <p>@item.Teknoloji</p>
                                    </div>
                                }
                            }
                        </div>
                    </div>

                </div>
            </section>

        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            var Link = window.location.href;
            var qrcode = new QRCode("QR", {
                text: Link,
                width: 128,
                height: 128,
                colorDark: "#000000",
                colorLight: "#ffffff",
                correctLevel: QRCode.CorrectLevel.H
            });
        });

        function HTMLtoPDF() {
            var ekran = $(window).width();
            if (ekran <= 1700) {
                var dialog = bootbox.dialog({
                    message: '<p class="text-center">Ekran Çözünürlüğünüz A4 Boyutu İçin Uygun Değildir! En İyi Boyut İçin En Az 1920X1080 Çözünürlüğü Kullanın!</p>',
                    closeButton: false
                });
                setTimeout(function () { dialog.modal('hide'); }, 3000);
            }
            else {
                html2canvas($('#pdfbolgesi'), {
                    onrendered: function (canvas) {
                        var img = canvas.toDataURL("image/png");
                        var doc = new jsPDF("p", "mm", "a4");
                        var width = doc.internal.pageSize.width;
                        var height = doc.internal.pageSize.height;
                        doc.addImage(img, 'JPEG', 0, 0, width, height);
                        doc.save('seckinumur.com.pdf');
                    }
                });
            }
        };

        function Yazdir() {
            var ekran = $(window).width();
            if (ekran <= 1700) {
                var dialog = bootbox.dialog({
                    message: '<p class="text-center">Ekran Çözünürlüğünüz A4 Boyutu İçin Uygun Değildir! En İyi Boyut İçin En Az 1920X1080 Çözünürlüğü Kullanın!</p>',
                    closeButton: false
                });
                setTimeout(function () { dialog.modal('hide'); }, 3000);
            }
            else {
                html2canvas($('#pdfbolgesi'), {
                    onrendered: function (canvas) {
                        var img = canvas.toDataURL("image/png");
                        printJS(img, 'image');
                    }
                });
            }
        };

    </script>
</body>
</html>